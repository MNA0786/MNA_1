{
    "name": "entertainment-tadka/telegram-bot",
    "description": "Telegram Movie Bot for EntertainmentTadka with Smart Search & Did You Mean Features",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-mysqli": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "ext-gd": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "index.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 666 movies.csv users.json bot_stats.json requests.json || true",
            "mkdir -p backups",
            "echo 'âœ… Bot installation completed!'"
        ],
        "post-update-cmd": [
            "echo 'ðŸ”„ Bot updated successfully!'"
        ],
        "test": [
            "php check_config.php"
        ],
        "backup": [
            "cp movies.csv backups/movies_backup_$(date +%Y-%m-%d_%H-%M-%S).csv",
            "echo 'âœ… Backup created successfully!'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
